# .env

# FastAPI 애플리케이션 설정
# 이 값들은 app/core/config.py의 Settings 클래스에서 읽어들입니다.

# LLM 모델 ID (Hugging Face Hub)
LLM_MODEL_ID="kakaocorp/kanana-1.5-8b-instruct-2505"

# 임베딩 모델 ID (Hugging Face Hub)
EMBED_MODEL_ID="dragonkue/bge-m3-ko"

# ChromaDB 벡터 데이터베이스 저장 경로
CHROMA_DB_PATH="data/chroma_db_korquad_full_context_rag"

# Few-Shot RAG에서 사용할 기본 예시 수
DEFAULT_K_FEWSHOT=3

# 모델 로드 장치 ("auto", "cuda", "cpu")
# "auto"로 설정 시 `transformers`가 자동으로 최적의 장치를 선택합니다.
DEVICE_TYPE="auto"
